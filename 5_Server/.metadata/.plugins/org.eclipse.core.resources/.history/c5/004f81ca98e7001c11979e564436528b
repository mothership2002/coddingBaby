				List<ShowWindowInfo> sList = service.mainBoardSelect(i);
				switch(i) {
				case 0 : ;
					break;
				case 1 : ;
					break;
				case 2 : ;
					break;
				case 3 : ;
					break;
				default : ;
				}
				map.put(, sList);
			}
		} catch(Exception e) {
			e.printStackTrace();
		}
		
		String path = req.getContextPath()+"/main";
		req.getRequestDispatcher(path);
		
		// 서비스 호출
		// req.setAttribute()
	
