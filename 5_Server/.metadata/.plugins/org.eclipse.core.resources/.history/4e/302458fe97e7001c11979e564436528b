package edu.kh.SemiProject.main.controller;

import java.io.IOException;
import java.util.List;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import edu.kh.SemiProject.board.model.service.BoardService;
import edu.kh.SemiProject.board.model.vo.ShowWindowInfo;

@WebServlet("/main")
public class MainServlet extends HttpServlet {
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		try {
			BoardService service = new BoardService();
			for(int i=0;i<5;i++) {
				List<ShowWindowInfo> sList = service.mainBoardSelect(i);
				int replyCount = service.replyCount(i);
			}
		} catch(Exception e) {
			e.printStackTrace();
		}
		
		String path = req.getContextPath()+"/main";
		req.getRequestDispatcher(path);
		
		// 서비스 호출
		// req.setAttribute()
	
		// main.jsp 포워드
	}
}
